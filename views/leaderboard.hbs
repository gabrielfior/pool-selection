<html>
  <head>
    <meta charset='utf-8' />
    <title>Leaderboard</title>
  </head>
  <body>

    <h1>Leaderboard</h1>

<table style="border-color: black; border-collapse: collapse;">
  <tr>
    <th>Email</th>
    <th>Holding</th>
  </tr>
  <!-- Using two loops for rendering first the user holdings, then holdings of other users -->
   {{#each user_holdings}}
      <tr style="background-color: yellow;">
        {{#if this.isMainUser}}
           <td>{{this.email}}</td>
            <td>{{this.userHoldingUSD}}</td>
        </tr>
            {{/if}}
      {{/each}}
      {{#each user_holdings}}
      <tr style="background-color: yellow;">
        {{#unless this.isMainUser}}
          <tr>
            <td>{{this.email}}</td>
            <td>{{this.userHoldingUSD}}</td>            
           </tr>
            {{/unless}}
      {{/each}}
</table>

   
  </body>
</html>